<module id="test" xmlns="http://www.o2it.ch/weblounge/3.0/module" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.o2it.ch/weblounge/3.0/module http://www.o2it.ch/xsd/weblounge/3.0/module.xsd">
  <enable>true</enable>
  <name language="de">Testmodul</name>
  <pagelets>
    <pagelet id="content" composeable="true">
      <name language="de">Seiteninhalt</name>
      <name language="en">Page content</name>
      <renderer>file://${module.root}/pagelets/content.jsp</renderer>
      <recheck>1d10M</recheck>
      <valid>1w1d1H1M</valid>
      <includes>
        <link href="file://${module.root}/css/greeting.css" rel="stylesheet" type="text/css" />
        <script src="file://${module.root}/scripts/greeting.js" type="javascript"/>
      </includes>
    </pagelet>
    <pagelet id="include" composeable="true">
      <name language="de">Begr√ºssung</name>
      <name language="en">Greeting</name>
      <renderer>file://${module.root}/pagelets/include.jsp</renderer>
      <recheck>1d10M</recheck>
      <valid>1w1d1H1M</valid>
      <includes>
        <link href="file://${module.root}/css/greeting.css" rel="stylesheet" type="text/css" />
      </includes>
    </pagelet>
    <pagelet id="i18n" composeable="false">
      <name language="de">I18n Internationalisierung</name>
      <name language="en">I18n internationalization</name>
      <renderer>file://${module.root}/pagelets/i18n.jsp</renderer>
    </pagelet>
  </pagelets>
  <actions>
    <action id="greeter.html">
      <name language="en">Greetings</name>
      <class>ch.o2it.weblounge.test.site.GreeterHTMLAction</class>
      <mountpoint>/greeting/</mountpoint>
      <includes>
        <script src="file://${module.root}/scripts/greeting.js" type="javascript"/>
      </includes>
    </action>
    <action id="greeter.xml">
      <name language="en">XML Greetings</name>
      <class>ch.o2it.weblounge.test.site.GreeterXMLAction</class>
      <mountpoint>/greeting/xml</mountpoint>
    </action>
    <action id="greeter.json">
      <name language="en">JSON Greetings</name>
      <class>ch.o2it.weblounge.test.site.GreeterJSONAction</class>
      <mountpoint>/greeting/json</mountpoint>
    </action>
  </actions>
  <jobs>
    <job id="startup">
      <name language="en">Job title</name>
      <class>ch.o2it.weblounge.test.site.SiteStartupJob</class>
      <schedule>@restart</schedule>
    </job>
    <job id="greeter">
      <name language="en">Job title</name>
      <class>ch.o2it.weblounge.test.site.GreeterJob</class>
      <schedule>* * * * *</schedule>
  	</job>
  </jobs>
  <imagestyles>
    <imagestyle id="original">
      <name language="en">Original size</name>
      <scalingmode>none</scalingmode>
    </imagestyle>
    <imagestyle id="box">
      <name language="en">Scale to bounding box</name>
      <scalingmode>box</scalingmode>
      <width>250</width>
      <height>250</height>
    </imagestyle>
    <imagestyle id="cover">
      <name language="en">Scale to cover area</name>
      <scalingmode>cover</scalingmode>
      <width>250</width>
      <height>250</height>
    </imagestyle>
    <imagestyle id="fill">
      <name language="en">Scale to fill area and crop</name>
      <scalingmode>fill</scalingmode>
      <width>250</width>
      <height>250</height>
    </imagestyle>
    <imagestyle id="width">
      <name language="en">Scale to fit width</name>
      <scalingmode>width</scalingmode>
      <width>250</width>
    </imagestyle>
    <imagestyle id="height">
      <name language="en">Scale to fit height</name>
      <scalingmode>height</scalingmode>
      <height>250</height>
    </imagestyle>
    <imagestyle id="none">
      <name language="en">Original size</name>
      <scalingmode>none</scalingmode>
    </imagestyle>
  </imagestyles>
</module>