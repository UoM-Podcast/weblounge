<!-- module id="test" xmlns="http://www.o2it.ch/weblounge/3.0/module" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.o2it.ch/weblounge/3.0/module http://www.o2it.ch/xsd/weblounge/3.0/module.xsd" -->
<module id="test">
  <enable>true</enable>
  <name language="de">Testmodul</name>
  <pagelets>
    <pagelet id="content" composeable="true">
      <renderer>file://${module.root}/pagelets/content.jsp</renderer>
      <recheck>1d10M</recheck>
      <valid>1w1d1H1M</valid>
      <name language="de">Seiteninhalt</name>
      <name language="en">Page content</name>
      <includes>
        <script src="file://${module.root}/scripts/greeting.js" type="javascript"/>
        <link href="file://${module.root}/css/greeting.css" rel="stylesheet" type="text/css" />
      </includes>
    </pagelet>
    <pagelet id="include" composeable="true">
      <renderer>file://${module.root}/pagelets/include.jsp</renderer>
      <recheck>1d10M</recheck>
      <valid>1w1d1H1M</valid>
      <name language="de">Begr√ºssung</name>
      <name language="en">Greeting</name>
      <includes>
        <link href="file://${module.root}/css/greeting.css" rel="stylesheet" type="text/css" />
      </includes>
    </pagelet>
  </pagelets>
  <actions>
    <action id="greeter.html">
      <class>ch.o2it.weblounge.test.site.GreeterAction</class>
      <mountpoint>/greeting/</mountpoint>
      <includes>
        <script src="file://${module.root}/scripts/greeting.js" type="javascript"/>
      </includes>
    </action>
    <action id="greeter.xml">
      <class>ch.o2it.weblounge.test.site.GreeterXMLAction</class>
      <mountpoint>/greeting/</mountpoint>
    </action>
    <action id="greeter.json">
      <class>ch.o2it.weblounge.test.site.GreeterJSONAction</class>
      <mountpoint>/greeting/</mountpoint>
    </action>
  </actions>
  <jobs>
    <job id="startup">
      <name>Job title</name>
      <class>ch.o2it.weblounge.test.site.SiteStartupJob</class>
      <schedule>@restart</schedule>
    </job>
    <job id="greeter">
      <name>Job title</name>
      <class>ch.o2it.weblounge.test.site.GreeterJob</class>
      <schedule>* * * * *</schedule>
  	</job>
  </jobs>
</module>