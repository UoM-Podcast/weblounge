        <published>
          <user id="simon.betschmann" realm="weblounge">Simon Betschmann</user>
          <from>292278994-08-17T07:12:55+01:00</from>
          <to>292278994-08-17T07:12:55+01:00</to>
        </published>
        <locale language="de" original="true">
          <modified>
            <user id="simon.betschmann" realm="weblounge">Simon Betschmann</user>
            <date>2005-02-11T23:28:26+01:00</date>
          </modified>
          <text id="paragraph"><![CDATA[Im Folgenden wird deshalb noch einmal im Detail ausgeführt, bei welchen "besonderen Vorfällen" die Schiedsrichter wie vorzugehen haben:]]></text>
        </locale>
        <properties />
