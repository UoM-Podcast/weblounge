<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="ch.entwine.weblounge.bridge.oaipmh.harvester.MatterhornHarvester"
               immediate="true">
  <implementation class="ch.entwine.weblounge.bridge.oaipmh.harvester.MatterhornHarvester"/>
  <property name="service.description" value="harvester to connect Matterhorn instances"/>
  <property name="service.pid" value="ch.entwine.weblounge.bridge.oaipmh.harvester.MatterhornHarvester"/>
  <service>
    <provide interface="org.osgi.service.cm.ManagedService"/>
  </service>
  <reference name="recordHandler"
             interface="ch.entwine.weblounge.bridge.oaipmh.harvester.RecordHandler"
             cardinality="1..1"
             policy="static"/>

  <reference name="persistence"
             interface="javax.persistence.spi.PersistenceProvider"
             cardinality="1..1"
             policy="static"/>
  <reference name="persistenceProps"
             interface="java.util.Map"
             cardinality="1..1"
             policy="static"
             target="(type=persistence)"/>
</scr:component>
