<?xml version="1.0" encoding="UTF-8"?>
<component name="weblounge-site" immediate="true">
  <implementation class="ch.o2it.weblounge.site.impl.SiteServiceImpl" />
  <property name="service.description" value="Weblounge Site Service" />
  <service>
    <provide interface="ch.o2it.weblounge.site.SiteService" />
    <provide interface="org.osgi.service.cm.ManagedService" />
  </service>
  <reference
  	name="pagerepository" 
  	interface="ch.o2it.weblounge.contentrepository.PageRepository"
    cardinality="1..1"
    policy="static"
    bind="setPageRepository"
  />
  <reference
  	name="resourcerepository" 
  	interface="ch.o2it.weblounge.contentrepository.ResourceRepository"
    cardinality="1..1"
    policy="static"
    bind="setResourceRepository"
  />
</component>
