<?xml version="1.0" encoding="UTF-8"?>
<site id="dev" xmlns="http://www.o2it.ch/weblounge/3.0/site" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.o2it.ch/weblounge/3.0/site http://www.o2it.ch/xsd/weblounge/3.0/site.xsd">
  <autostart>true</autostart>
  <name>Main site</name>
  <security>
    <administrator>
      <login>blogadmin</login>
      <password type="plain">secret</password>
      <name>Web Office</name>
      <email>weboffice@nowhere.com</email>
    </administrator>
    <authentication>
    	<loginmodule>
			  <class>ch.o2it.weblounge.common.impl.security.jaas.AdminLoginModule</class>
			  <relevance>sufficient</relevance>
    	</loginmodule>
    </authentication>
  </security>
  <domains>
  	<url default="true">www.weblounge.org</url>
  	<url>*.nowhere.com</url>
    <url>localhost:8080</url>
  </domains>
  <templates>
    <template id="default" composeable="true" default="true">
      <renderer>file://template/default.jsp</renderer>
      <stage>boxes</stage>
      <recheck>1d10M</recheck>
      <valid>1w1d1H1M</valid>
      <name language="de">Standard Vorlage</name>
      <name language="en">Default template</name>
    </template>
    <template id="mobile" composeable="true">
    	<renderer>file://template/mobile.jsp</renderer>
      <recheck>1d</recheck>
      <valid>1w</valid>
      <name language="de">Mobile</name>
      <name language="en">Mobile</name>
    </template>
  </templates>
  <languages>
    <language default="true">de</language>
    <language>en</language>
  </languages>
  <options>
    <option>
      <name>media.url</name>
      <value>http://media.swissunihockey.ch/dev</value>
    </option>
  </options>
</site>