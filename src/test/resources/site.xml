<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<site id="dev">
  <enable>true</enable>
  <description>Main site</description>
  <urls>
  	<url>www.weblounge.org</url>
    <url>blog.nowhere.com</url>
    <url>localhost:8080</url>
  </urls>
  <languages>
    <language default="true">de</language>
    <language>en</language>
  </languages>
  <options>
    <option>
      <name>media.url</name>
      <value>http://media.swissunihockey.ch/dev</value>
    </option>
  </options>
  <security>
    <administrator>
      <login>blogadmin</login>
      <password digest="plain">secret</password>
      <name>Web Office</name>
      <email>weboffice@nowhere.com</email>
    </administrator>
    <authentication>
      <module class="ch.o2it.weblounge.core.security.jaas.WebloungeLoginModule" relevance="sufficient"/>
      <module class="ch.o2it.weblounge.core.security.jaas.AdminLoginModule" relevance="sufficient"/>
    </authentication>
  </security>
  <templates>
    <template id="default" composeable="true" default="true">
      <renderer>file://template/default.jsp</renderer>
      <stage>boxes</stage>
      <recheck>1d10m</recheck>
      <valid>1w1d1h1m</valid>
      <name language="de">Standard Vorlage</name>
      <name language="en">Default template</name>
    </template>
    <template id="mobile" composeable="true">
      <class>ch.o2it.weblounge.common.impl.site.JSPTemplate</class>
    	<renderer>file://template/mobile.jsp</renderer>
      <name language="de">Mobile</name>
      <name language="en">Mobile</name>
    </template>
  </templates>
  <layouts/>
  <imagestyles>
    <imagestyle id="portrait" composeable="true">
      <scalingmode>box</scalingmode>
      <width>150</width>
      <height>200</height>
      <name language="de">Portraitbild</name>
      <name language="en">Portrait image</name>
    </imagestyle>
    <imagestyle id="highresolution" composeable="true">
      <scalingmode>box</scalingmode>
      <width>800</width>
      <height>600</height>
      <name language="de">Hohe Aufl√∂sung</name>
      <name language="en">High resolution</name>
    </imagestyle>
  </imagestyles>
</site>