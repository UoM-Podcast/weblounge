<test>
  <name><![CDATA[Action Tests]]></name>
  <test-case>
    <name><![CDATA[English greeting test]]></name>
    <url method="get">/greeting</url>
    <parameter name="language">english</parameter>
    <assert-status>200,304</assert-status>
    <assert-exists>
      <path>//div[@id='main']/h1</path>
    </assert-exists>
    <assert-not-exists>
      <path>//div[@id='main']/h2</path>
    </assert-not-exists>
    <assert-equals ignorewhitespace="true" ignorecase="true">
      <path>//div[@id='main']/h1</path>
      <value><![CDATA[hello world i am happy today]]></value>
    </assert-equals>
    <assert-not-equals ignorewhitespace="true" ignorecase="false">
      <path>//div[@id='main']/h2</path>
      <value><![CDATA[hello world i am happy now]]></value>
    </assert-not-equals>
  </test-case>
  <test-case>
    <name><![CDATA[German greeting test]]></name>
    <url method="get">/greeting</url>
    <parameter name="language">german</parameter>
    <assert-status>200,304</assert-status>
    <assert-exists>
      <path>//div[@id='main']/h1</path>
    </assert-exists>
    <assert-not-exists>
      <path>//div[@id='main']/h2</path>
    </assert-not-exists>
    <assert-equals ignorewhitespace="true" ignorecase="true">
      <path>//div[@id='main']/h1</path>
      <value><![CDATA[hello world i am happy today]]></value>
    </assert-equals>
    <assert-not-equals ignorewhitespace="true" ignorecase="false">
      <path>//div[@id='main']/h1</path>
      <value><![CDATA[hello world i am happy today]]></value>
    </assert-not-equals>
  </test-case>
</test>