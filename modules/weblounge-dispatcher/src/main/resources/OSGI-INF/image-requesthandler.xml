<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  immediate="true"
  name="Weblounge Image Request Handler">

  <implementation class="ch.entwine.weblounge.dispatcher.impl.handler.ImageRequestHandlerImpl" />
  <property name="service.description" value="Weblounge Image Request Handler" />
  <service>
    <provide interface="ch.entwine.weblounge.dispatcher.RequestHandler" />
  </service>

  <reference name="previewgenerator" interface="ch.entwine.weblounge.common.content.image.ImagePreviewGenerator" cardinality="0..n" policy="dynamic" bind="addPreviewGenerator" unbind="removePreviewGenerator" />
	<reference name="environment" interface="ch.entwine.weblounge.common.site.Environment" cardinality="1..1" policy="static" bind="setEnvironment" />

</scr:component>