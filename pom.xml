<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <packaging>bundle</packaging>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-cache</artifactId>
  <name>Weblounge Cache</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <dependencies>

    <!-- weblounge -->

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-cache-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- osgi support -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>jtidy</groupId>
      <artifactId>jtidy</artifactId>
      <version>4aug2000r7-dev</version>
    </dependency>
    
    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.cache</Bundle-SymbolicName>
            <Import-Package>
              ch.o2it.weblounge.cache;version=${project.version},
              ch.o2it.weblounge.common;version=${project.version},
              ch.o2it.weblounge.common.content;version=${project.version},
              ch.o2it.weblounge.common.impl.request;version=${project.version},
              ch.o2it.weblounge.common.impl.util.datatype;version=${project.version},
              ch.o2it.weblounge.common.request;version=${project.version},
              org.apache.commons.lang;version="2.4",
              org.slf4j;version="1.5.6",
              javax.servlet;version="2.5",
              javax.servlet.http;version="2.5",
              org.osgi.service.cm;version="1.3.0",
              org.osgi.service.component;version="1.1.0",
            </Import-Package>
            <Export-Package>
              ch.o2it.weblounge.cache.impl;version=${project.version}
            </Export-Package>
            <Private-Package>
              ch.o2it.weblounge.cache.impl.filter,
              ch.o2it.weblounge.cache.impl.handle,
              ch.o2it.weblounge.cache.impl.index
            </Private-Package>
            <Service-Component>
              OSGI-INF/cache-service.xml
            </Service-Component>
            <Embed-Dependency>
              jtidy
            </Embed-Dependency>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>