  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>
              ch.o2it.weblounge.common,
              ch.o2it.weblounge.common.impl.page,
              ch.o2it.weblounge.common.impl.request,
              ch.o2it.weblounge.common.impl.site, 
              ch.o2it.weblounge.common.impl.url,
              ch.o2it.weblounge.common.impl.util,
              ch.o2it.weblounge.common.language,
              ch.o2it.weblounge.common.page,
              ch.o2it.weblounge.common.request,
              ch.o2it.weblounge.common.site,
              ch.o2it.weblounge.common.url,
              ch.o2it.weblounge.common.user,
              ch.o2it.weblounge.dispatcher,
              ch.o2it.weblounge.site,
              org.slf4j,
              org.ops4j.pax.web.service;resolution:=optional,
              javax.activation,
              javax.servlet,
              javax.servlet.http,
              org.apache.jasper,
              org.osgi.framework,
              org.osgi.service.cm,
              org.osgi.service.component,
              org.osgi.service.http,
              org.osgi.util.tracker
            </Import-Package>
            <Export-Package>
          	  ch.o2it.weblounge.dispatcher.impl
            </Export-Package>
            <Service-Component>
              OSGI-INF/dispatcher-service.xml,
              OSGI-INF/action-requesthandler.xml,
              OSGI-INF/page-requesthandler.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>  

</project>