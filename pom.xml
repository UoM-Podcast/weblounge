<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-dispatcher-api</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Dispatcher API</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>
  
    <!-- weblounge -->
	
    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>
  
    <!-- thirdparty -->
    
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
  
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>
              ch.o2it.weblounge.common.request,
              ch.o2it.weblounge.common.site,
              javax.servlet
            </Import-Package>
            <Export-Package>
              ch.o2it.weblounge.dispatcher
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>