<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-contentrepository</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Content Repository</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>
	
    <!-- weblounge -->
	
    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-contentrepository-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <!-- osgi support -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_compendium</artifactId>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-fileupload</groupId>
      <artifactId>commons-fileupload</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <!-- apache jackrabbit -->

    <dependency>
      <groupId>org.apache.jackrabbit</groupId>
      <artifactId>jackrabbit-api</artifactId>
      <version>1.6.0</version>
    </dependency>

    <dependency>
       <groupId>org.apache.jackrabbit</groupId>
       <artifactId>jackrabbit-core</artifactId>
       <version>1.6.0</version>
    </dependency>

    <dependency>
       <groupId>org.apache.jackrabbit</groupId>
       <artifactId>jackrabbit-jcr-commons</artifactId>
       <version>1.6.0</version>
    </dependency>

    <dependency>
        <groupId>org.apache.jackrabbit</groupId>
        <artifactId>jackrabbit-spi</artifactId>
        <version>1.6.0</version>
    </dependency>

    <dependency>
        <groupId>org.apache.jackrabbit</groupId>
        <artifactId>jackrabbit-spi-commons</artifactId>
        <version>1.6.0</version>
    </dependency>

    <!-- end apache jackrabbit -->

    <!-- apache jackrabbit support -->

    <!-- supports jackrabbit-core -->
    <dependency>
      <groupId>javax.jcr</groupId>
      <artifactId>jcr</artifactId>
      <version>1.0</version>
    </dependency>

    <!-- supports jackrabbit-core -->
    <dependency>
      <groupId>javax.transaction</groupId>
      <artifactId>jta</artifactId>
      <version>1.0.1B</version>
    </dependency>

    <!-- supports jackrabbit-core, jackrabbit-spi-commons -->
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
    </dependency>

    <!-- supports jackrabbit-core -->
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
    </dependency>
    
    <!-- supports jackrabbit-core -->
    <dependency>
      <groupId>org.apache.derby</groupId>
      <artifactId>derby</artifactId>
      <version>10.3.1.4</version>
    </dependency>
    
    <!-- supports jackrabbit-core -->
    <dependency>
      <groupId>org.apache.lucene</groupId>
      <artifactId>lucene-core</artifactId>
      <version>2.9.0</version>
    </dependency>

    <!-- supports jackrabbit-core -->
    <dependency>
        <groupId>concurrent</groupId>
        <artifactId>concurrent</artifactId>
        <version>1.3.4</version>
    </dependency>

    <!-- supports jackrabbit-jcr-commons -->
    <dependency>
        <groupId>org.json</groupId>
        <artifactId>json</artifactId>
        <version>20090211</version>
    </dependency>

    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>
    
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${pom.name}</Bundle-SymbolicName>
            <Embed-Dependency>
              jcr,
              jta,
              jackrabbit-api,
              jackrabbit-core,
              jackrabbit-jcr-commons,
              jackrabbit-spi,
              jackrabbit-spi-commons,
              commons-collections,
              commons-io,
              concurrent,
              lucene-core,
              json
            </Embed-Dependency>
            <Export-Package>
              ch.o2it.weblounge.contentrepository.impl
            </Export-Package>
            <Import-Package>
              !org.apache.jackrabbit.test,
              !org.apache.jackrabbit.extractor,
              *
            </Import-Package>
            <Service-Component>
              OSGI-INF/contentrepository-service.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
