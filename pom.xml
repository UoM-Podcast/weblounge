<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-taglib</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Taglibrary</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <dependencies>

    <!-- weblounge -->

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-contentrepository-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jsp-api</artifactId>
    </dependency>

    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.taglib</Bundle-SymbolicName>
            <Import-Package>
              ch.o2it.weblounge.common;version=${project.version},
              ch.o2it.weblounge.common.content;version=${project.version},
              ch.o2it.weblounge.common.content.page;version=${project.version},
              ch.o2it.weblounge.common.impl.content;version=${project.version},
              ch.o2it.weblounge.common.impl.content.page;version=${project.version},
              ch.o2it.weblounge.common.impl.language;version=${project.version},
              ch.o2it.weblounge.common.impl.request;version=${project.version},
              ch.o2it.weblounge.common.impl.url;version=${project.version},
              ch.o2it.weblounge.common.impl.util;version=${project.version},
              ch.o2it.weblounge.common.impl.util.config;version=${project.version},
              ch.o2it.weblounge.common.language;version=${project.version},
              ch.o2it.weblounge.common.request;version=${project.version},
              ch.o2it.weblounge.common.security;version=${project.version},
              ch.o2it.weblounge.common.site;version=${project.version},
              ch.o2it.weblounge.common.url;version=${project.version},
              ch.o2it.weblounge.common.user;version=${project.version},
              ch.o2it.weblounge.contentrepository;version=${project.version},
              org.apache.commons.lang;version="2.4",
              org.slf4j;version="1.5.6",
              javax.servlet;version="2.5",
              javax.servlet.http;version="2.5",
              javax.servlet.jsp;version="2.1.0",
              javax.servlet.jsp.tagext;version="2.1.0"
            </Import-Package>
            <Export-Package>
              ch.o2it.weblounge.taglib;version=${project.version},
              ch.o2it.weblounge.taglib.content;version=${project.version},
              ch.o2it.weblounge.taglib.security;version=${project.version},
              ch.o2it.weblounge.taglib.util;version=${project.version}
            </Export-Package>
            <Service-Component>
              OSGI-INF/contentrepository-factory.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>