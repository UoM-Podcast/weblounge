  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${pom.name}</Bundle-SymbolicName>
            <Bundle-Activator>ch.o2it.weblounge.contentrepository.impl.ContentRepositoryService</Bundle-Activator>
            <Embed-Dependency>
              jcr,
              jta,
              jackrabbit-api,
              jackrabbit-core,
              jackrabbit-jcr-commons,
              jackrabbit-spi,
              jackrabbit-spi-commons,
              jackrabbit-text-extractors,
              lucene-core,
              derby,
              commons-collections,
              commons-io,
              concurrent,
              xalan,
              serializer,
              xercesImpl,
              json
            </Embed-Dependency>
            <!--  Embed for additional indexing support            
              nekohtml
              pdfbox,
              bcmail-jdk14,
              bcprov-jdk14,
              fontbox,
              jempbox
            -->
            <Export-Package>
              ch.o2it.weblounge.contentrepository.impl
            </Export-Package>
            <Import-Package>
              org.apache.xml.resolver.*;resolution:=optional,
              sun.io.*;resolution:=optional,
              !org.apache.jackrabbit.test,
              !org.apache.derby.impl.drda,
              !org.cyberneko.html.*,
              !org.apache.poi.*,
              !org.pdfbox.*,
              *
            </Import-Package>
            <!-- Import for additional indexing support
              !junit.*,
              !org.apache.tools.ant.*,
              !org.apache.lucene.demo,
            -->
            <Service-Component>
              OSGI-INF/contentrepository-service.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
