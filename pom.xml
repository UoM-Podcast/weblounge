<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-contentrepository-api</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Content Repository API</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <dependencies>

    <!-- weblounge -->

  	<dependency>
  		<groupId>ch.o2it.weblounge</groupId>
  		<artifactId>weblounge-common-api</artifactId>
  		<version>${project.version}</version>
  	</dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>org.apache.solr</groupId>
      <artifactId>solr-common</artifactId>
      <version>1.3.0</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.contentrepository-api</Bundle-SymbolicName>
            <Import-Package>
              ch.o2it.weblounge.common.content.file;version=${project.version},
              ch.o2it.weblounge.common.content.image;version=${project.version},
              ch.o2it.weblounge.common.content.page;version=${project.version},
              ch.o2it.weblounge.common.content;version=${project.version},
              ch.o2it.weblounge.common.language;version=${project.version},
              ch.o2it.weblounge.common.security;version=${project.version},
              ch.o2it.weblounge.common.site;version=${project.version},
              ch.o2it.weblounge.common.user;version=${project.version},
              org.slf4j;version="1.5.6",
              javax.xml.parsers,
              org.xml.sax,
              org.w3c.dom
            </Import-Package>
            <Export-Package>
              ch.o2it.weblounge.contentrepository;version=${project.version}
            </Export-Package>
            <Embed-Dependency>
              solr-common;inline=true,
            </Embed-Dependency>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
