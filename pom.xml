<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it</groupId>
  <artifactId>weblounge-common-api</artifactId>
  <name>Weblounge Common API</name>
  <packaging>bundle</packaging>
  <parent>
    <groupId>ch.o2it</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>

    <!-- thirdparty -->

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${pom.name}</Bundle-SymbolicName>
            <Export-Package>
            	ch.o2it.weblounge.common.dispatcher,
            	ch.o2it.weblounge.common.job,
            	ch.o2it.weblounge.common.language,
            	ch.o2it.weblounge.common.modification,
            	ch.o2it.weblounge.common.module,
            	ch.o2it.weblounge.common.page,
            	ch.o2it.weblounge.common.publication,
            	ch.o2it.weblounge.common.renderer,
            	ch.o2it.weblounge.common.repository,
            	ch.o2it.weblounge.common.request,
            	ch.o2it.weblounge.common.security,
            	ch.o2it.weblounge.common.service,
            	ch.o2it.weblounge.common.site,
            	ch.o2it.weblounge.common.tag,
            	ch.o2it.weblounge.common.url,
            	ch.o2it.weblounge.common.util
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>