<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-taglib</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Taglibrary</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>

    <!-- weblounge -->

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-contentrepository-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jsp-api</artifactId>
    </dependency>

    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>
              ch.o2it.weblounge.common,
              ch.o2it.weblounge.common.content,
              ch.o2it.weblounge.common.impl.content,
              ch.o2it.weblounge.common.impl.language,
              ch.o2it.weblounge.common.impl.request,
              ch.o2it.weblounge.common.impl.url,
              ch.o2it.weblounge.common.impl.util,
              ch.o2it.weblounge.common.language,
              ch.o2it.weblounge.common.request,
              ch.o2it.weblounge.common.security,
              ch.o2it.weblounge.common.site,
              ch.o2it.weblounge.common.url,
              ch.o2it.weblounge.common.user,
              ch.o2it.weblounge.contentrepository,
              org.apache.commons.lang,
              org.slf4j,
              javax.servlet,
              javax.servlet.http,
              javax.servlet.jsp,
              javax.servlet.jsp.tagext
            </Import-Package>
            <Export-Package>
              ch.o2it.weblounge.taglib,
              ch.o2it.weblounge.taglib.content,
              ch.o2it.weblounge.taglib.security,
              ch.o2it.weblounge.taglib.util
            </Export-Package>
            <Service-Component>
              OSGI-INF/contentrepository-factory.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>