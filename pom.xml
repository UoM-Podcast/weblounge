<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-cache-api</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Cache API</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>
  
    <!-- weblounge -->
	
	<dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>${project.version}</version>
    </dependency>
  
    <!-- thirdparty -->

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
  
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.cache-api</Bundle-SymbolicName>
            <Import-Package>
              ch.o2it.weblounge.common.request;version=${project.version}
            </Import-Package>
            <Export-Package>
              ch.o2it.weblounge.cache;version=${project.version}
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>