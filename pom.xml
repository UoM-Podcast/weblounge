<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-test</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Test Site</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>

    <!-- weblounge -->

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-taglib</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- osgi support -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.felix.karaf.shell</groupId>
      <artifactId>org.apache.felix.karaf.shell.console</artifactId>
      <version>1.0.0</version>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
    </dependency>

    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpcore</artifactId>
      <version>4.0</version>
    </dependency>

    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>4.0</version>
    </dependency>

    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpmime</artifactId>
      <version>4.0</version>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jsp-api</artifactId>
    </dependency>

    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.test</Bundle-SymbolicName>
            <Import-Package>
              ch.o2it.weblounge.common.content;version=${project.version},
              ch.o2it.weblounge.common.request;version=${project.version},
              ch.o2it.weblounge.common.scheduler;version=${project.version},
              ch.o2it.weblounge.common.site;version=${project.version},
              ch.o2it.weblounge.common.url;version=${project.version},
              ch.o2it.weblounge.common.impl.content;version=${project.version},
              ch.o2it.weblounge.common.impl.request;version=${project.version},
              ch.o2it.weblounge.common.impl.scheduler;version=${project.version},
              ch.o2it.weblounge.common.impl.site;version=${project.version},
              ch.o2it.weblounge.common.impl.url;version=${project.version}, 
              ch.o2it.weblounge.common.impl.util;version=${project.version},
              ch.o2it.weblounge.common.impl.util.config;version=${project.version},
              ch.o2it.weblounge.common.impl.util.xml;version=${project.version},
              ch.o2it.weblounge.taglib;version=${project.version},
              ch.o2it.weblounge.taglib.content;version=${project.version},
              ch.o2it.weblounge.taglib.security;version=${project.version},
              ch.o2it.weblounge.taglib.util;version=${project.version},
              javax.servlet;version="2.5",
              javax.servlet.jsp;version="2.1.0",
              javax.servlet.jsp.tagext;version="2.1.0",
              javax.xml.parsers,
              javax.xml.transform,
              javax.xml.transform.dom,
              javax.xml.transform.stream,
              org.apache.commons.io;version="1.4",
              org.apache.commons.lang;version="2.4",
              org.slf4j;version="1.5.6",
              org.w3c.dom,
              org.osgi.framework;version="1.4.0",
              org.osgi.service.component;version="1.1.0",
              *;resolution:=optional
            </Import-Package>
            <Private-Package>
              org.apache.commons.*,
              org.json.*,
              ch.o2it.weblounge.test.harness,
              ch.o2it.weblounge.test.util
            </Private-Package>
            <Embed-Dependency>
              httpclient,
              httpcore,
              httpmime,
              json,
              junit
            </Embed-Dependency>
            <Service-Component>
              OSGI-INF/site-activator.xml,
              OSGI-INF/test-command.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>