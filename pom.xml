<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-dispatcher</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Dispatcher</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>

    <!-- weblounge -->
	
    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-dispatcher-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-contentrepository-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-cache-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- osgi support -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
    </dependency>
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>activation</artifactId>
    </dependency>

    <dependency>
      <groupId>org.ops4j.pax.web</groupId>
      <artifactId>pax-web-api</artifactId>
      <version>0.7.2</version>
    </dependency>

    <dependency>
      <groupId>org.ops4j.pax.web</groupId>
      <artifactId>pax-web-jsp</artifactId>
      <version>0.7.2</version>
    </dependency>
  
    <dependency>
      <groupId>org.ops4j.pax.web</groupId>
      <artifactId>pax-web-jetty-bundle</artifactId>
      <version>0.7.2</version>
    </dependency>
  
    <!-- testing -->
    
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>
    
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.dispatcher</Bundle-SymbolicName>
            <Import-Package>
              ch.o2it.weblounge.common;version=${project.version},
              ch.o2it.weblounge.common.content;version=${project.version},
              ch.o2it.weblounge.common.impl.content;version=${project.version},
              ch.o2it.weblounge.common.impl.page;version=${project.version},
              ch.o2it.weblounge.common.impl.request;version=${project.version},
              ch.o2it.weblounge.common.impl.site;version=${project.version}, 
              ch.o2it.weblounge.common.impl.url;version=${project.version},
              ch.o2it.weblounge.common.impl.util;version=${project.version},
              ch.o2it.weblounge.common.impl.util.classloader;version=${project.version},
              ch.o2it.weblounge.common.language;version=${project.version},
              ch.o2it.weblounge.common.request;version=${project.version},
              ch.o2it.weblounge.common.site;version=${project.version},
              ch.o2it.weblounge.common.url;version=${project.version},
              ch.o2it.weblounge.common.user;version=${project.version},
              ch.o2it.weblounge.contentrepository;version=${project.version},
              ch.o2it.weblounge.dispatcher;version=${project.version},
              javax.activation,
              javax.el;version="2.0.0",
              javax.servlet;version="2.4.0",
              javax.servlet.http;version="2.4.0",
              javax.servlet.jsp;version="2.0.0",
              javax.servlet.resources;version="2.4.0",
              org.apache.commons.io,
              org.apache.commons.lang,
              org.mortbay.jetty,
              org.mortbay.resource,
              org.ops4j.pax.web.jsp,
              org.ops4j.pax.web.service,
              org.slf4j,
              org.osgi.framework,
              org.osgi.service.cm,
              org.osgi.service.component,
              org.osgi.service.http,
              org.osgi.util.tracker
            </Import-Package>
            <Export-Package>
          	  ch.o2it.weblounge.dispatcher.impl;version=${project.version}
            </Export-Package>
            <Service-Component>
              OSGI-INF/contentrepository-factory.xml,
              OSGI-INF/dispatcher-service.xml,
              OSGI-INF/action-requesthandler.xml,
              OSGI-INF/page-requesthandler.xml,
              OSGI-INF/site-registration-service.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>  

</project>