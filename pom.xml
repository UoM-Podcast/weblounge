<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it</groupId>
  <artifactId>weblounge-site</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Site</name>
  <parent>
    <groupId>ch.o2it</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>

    <!-- weblounge -->
    
    <dependency>
      <groupId>ch.o2it</groupId>
      <artifactId>weblounge-site-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>
    
    <dependency>
      <groupId>ch.o2it</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

	<!-- osgi support -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_compendium</artifactId>
    </dependency>

    <!-- thirdparty -->
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${pom.name}</Bundle-SymbolicName>
            <Bundle-Activator>ch.o2it.weblounge.site.impl.SiteServiceImpl</Bundle-Activator>
            <Export-Package>
            	ch.o2it.weblounge.site.impl
            </Export-Package>
            <Service-Component>
              OSGI-INF/site-service.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>