<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.o2it.weblounge</groupId>
  <artifactId>weblounge-test</artifactId>
  <packaging>bundle</packaging>
  <name>Weblounge Test Site</name>
  <parent>
    <groupId>ch.o2it.weblounge</groupId>
    <artifactId>weblounge-base</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <dependencies>

    <!-- weblounge -->

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-site-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common-api</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>ch.o2it.weblounge</groupId>
      <artifactId>weblounge-common</artifactId>
      <version>3.0-SNAPSHOT</version>
    </dependency>

    <!-- osgi support -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>

    <!-- thirdparty -->

    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <!-- testing -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>
              ch.o2it.weblounge.common.request,
              ch.o2it.weblounge.common.scheduler,
              ch.o2it.weblounge.common.site,
              ch.o2it.weblounge.common.impl.request,
              ch.o2it.weblounge.common.impl.scheduler,
              ch.o2it.weblounge.common.impl.site,
              javax.servlet,
              javax.xml.parsers,
              javax.xml.transform,
              javax.xml.transform.dom,
              javax.xml.transform.stream,
              org.json,
              org.slf4j,
              org.w3c.dom,
              org.osgi.service.component
            </Import-Package>
            <Service-Component>
              OSGI-INF/site.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>